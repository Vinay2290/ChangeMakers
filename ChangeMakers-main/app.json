{
  "expo": {
    "name": "ChangeMakers",
    "slug": "ChangeMakers",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ChangeMakers.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow ChangeMakers to access your photos to update your profile picture.",
        "NSCameraUsageDescription": "Allow ChangeMakers to access your camera to take profile pictures."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "ChangeMakers.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "scheme": "changemakers",
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow ChangeMakers to access your photos to update your profile picture.",
          "cameraPermission": "Allow ChangeMakers to access your camera to take profile pictures."
        }
      ]
    ]
  }
}